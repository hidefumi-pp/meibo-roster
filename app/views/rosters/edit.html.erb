	<h3>Edit Data</h3>
	
	<%= form_tag("/rosters/"+@roster.id.to_s,:method=>:patch) do %>
		<div class="form-group">
				<%= label_tag "form-last","Last Name" %>
				<%= text_field :rosters, :last, id:"form-last",class:"form-control",value: @roster.last%>
		</div>
		<div class="form-group">
				<%= label_tag "form-first","First Name" %>
				<%= text_field :rosters, :first, id:"form-first",class:"form-control",value: @roster.first%>
		</div>
		<div class="form-group">
				<%= label_tag "form-tel","Tel" %>
				<%= telephone_field :rosters, :tel, id:"form-tel",class:"form-control",value: @roster.tel%>
		</div>
		<div class="form-group">
			<%= label_tag "form-class","Class" %>
			<%= select_tag 'rosters[category_id]', options_from_collection_for_select(@categories, :id, :name),class:"form-control",id:"form-class" %>
		</div>
		
		<%= submit_tag "Update",class:"btn btn-primary"%>
	<% end %>

